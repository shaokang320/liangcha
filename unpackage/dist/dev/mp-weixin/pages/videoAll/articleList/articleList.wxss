.header {
  position: fixed;
  width: 100%;
  background: #ffffff;
  font-size: 26rpx;
  border-bottom: 1px solid #EEEEEE;
}
.header .classify {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}
.header .classify .subnav {
      line-height: 90rpx;
      height: 90rpx;
      margin-right: 50rpx;
      -webkit-transition: font .5s;
      -o-transition: font .5s;
      transition: font .5s;
      font-weight: 600;
}
.header .classify .subnav.active {
        font-size: 28rpx;
        color: #00A47C;
        border-bottom: 3px solid #00A47C;
}
