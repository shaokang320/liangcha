.header {
  position: fixed;
  width: 100%;
  background: #ffffff;
  font-size: 26rpx;
  border-bottom: 4px solid #EEEEEE;
}
.header .classify {
    height: 90rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
}
.header .classify .subnav {
      width: 200rpx;
      -webkit-transition: font .5s;
      -o-transition: font .5s;
      transition: font .5s;
}
.header .classify .subnav.active {
        font-size: 28rpx;
        color: #00A47C;
}
.section-a {
  padding-top: 90rpx;
}
.section-a .item {
    display: -webkit-box;
