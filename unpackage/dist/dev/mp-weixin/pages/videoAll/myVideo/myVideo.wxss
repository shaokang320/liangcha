    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    padding: 30rpx 0;
    border-bottom: 1px solid #EEEEEE;
}
.section-a .item .img {
      position: relative;
      width: 210rpx;
      height: 119rpx;
      margin-right: 18rpx;
}
.section-a .item .img image {
        position: absolute;
        width: 210rpx;
        height: 119rpx;
        border-radius: 6rpx;
}
.section-a .item .img .num {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 36rpx;
        text-align: center;
        line-height: 36rpx;
        color: #a2a3a4;
        font-size: 20rpx;
        background: gainsboro;
}
